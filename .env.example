# Supabase Configuration
# Get these values from: https://supabase.com/dashboard/project/_/settings/api
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here

# Service Role Key (서버 전용 - RLS 우회)
# 중요: 절대 클라이언트에 노출하지 마세요!
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# Toss Payments Configuration
# Get these values from: https://developers.tosspayments.com/
# 테스트 모드: test_로 시작하는 키 사용
# 라이브 모드: live_로 시작하는 키 사용
NEXT_PUBLIC_TOSS_PAYMENTS_CLIENT_KEY=test_ck_your-client-key
TOSS_SECRET_KEY=test_sk_your-secret-key

# Site URL (결제 콜백용)
NEXT_PUBLIC_SITE_URL=https://www.ai-planx.com
